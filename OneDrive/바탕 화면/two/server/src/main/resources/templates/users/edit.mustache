{{>layouts/header}}
<!--수정 페이지-->
{{#home}}
<form class="container" action="/users/update" method="post">
    <input name="id" type="hidden" value="{{id}}"/>
    <div class="mb-3">
        <label class="form-label">아이디</label>
        <input type="text" class="form-control" name="username" value="{{username}}">
    </div>
    <div class="mb-3">
        <label class="form-label">비밀번호</label>
        <input type="password" class="form-control" rows="3" name="password" value="{{password}}">
    </div>
    <div class="mb-3">
        <label class="form-label">비밀번호 재확인</label>
        <input type="password" class="form-control" rows="3" name="password_check" value="{{password_check}}">
    </div>
    <div class="mb-3">
        <label class="form-label">이름</label>
        <input type="text" class="form-control" rows="3" name="name" value="{{name}}">
    </div>
    <div class="mb-3">
        <label class="form-label">생년월일</label>
        <input type="text" class="form-control" rows="3" name="birth" value="{{birth}}">
    </div>
    <div class="mb-3">
        <label class="form-label">학과</label>
        <input type="text" class="form-control" rows="3" name="department" value="{{department}}">
    </div>
    <button type="submit" class="btn btn-primary">수정</button>
    <a href="/users/{{id}}" class="btn btn-primary">Back</a>
</form>
{{/home}}
{{>layouts/footer}}